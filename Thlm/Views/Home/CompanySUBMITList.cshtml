@model IEnumerable<thlem.Models.CompanySubViewModel>

@{
    ViewData["Title"] = "CompanySUBMITList";
}

<h2>CompanySUBMITList </h2>

<p>
    <a asp-action="SubmitCompany">Create New</a>
</p>
<p>@Model.Count()</p>
<table class="table">
    <thead>
        <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    <div> @Html.DisplayNameFor(model => model.File)</div>
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="~/Img/@item.File" class="img-responsive" alt="@item.ProjectName" style="height :50px;" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteCompanySubmit", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
